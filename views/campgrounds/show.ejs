<% layout("layouts/boilerplate") %>
<body class="bg-light">
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <img src="<%= campground.image %>" alt="Campground Image" class="img-fluid rounded mb-3">
                <h1 class="mb-3"><%= campground.title %></h1>
                <h2 class="mb-3"><%= campground.location %></h2>
                <p><%= campground.description %></p>
                <p><strong>Price:</strong> <%= campground.price %></p>
                <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-primary">Edit Campground</a>
                <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button class="btn btn-danger">Delete Campground</button>
                </form>
                <a href="/campgrounds" class="btn btn-secondary">Show All Campgrounds</a>
            </div>
        </div>
    </div>

